@{
    ViewData["Title"] = "Amandas bank";
}
@model AmandasBank.Web.Models.ViewModels.CustomerAccountsViewModel

<h1>Amandas Bank</h1>

<div>
    <ul>
        @foreach (var item in Model.Customers)
        {
            <li>
                @item.Name, CustomerID: @item.CustomerId <br />
                Accounts:
                @foreach (var account in item.Accounts)
                {
            <p> ID @account.AccountId, Balance: @account.Balance</p> 


                }
            </li>
        }
    </ul>
</div>
